<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!--Added the Add button for all rows --> 
          <br>
          <a href="books/details" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br> <br> 
          <div  class="table-responsive ">
            <table class="table table-bordered table-striped table-hover">
              <thead class="text-uppercase" style= "color:#fff;background-color:#343a40">
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center">Update Action</th>
                  <th class="text-center">Delete Action</th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center">$<%= books[count].Price %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the EDIT BUTTON HERE -->
                    <!-- ------------------------ -->
                    <!-- Added the Edit button for all rows -->
                     <a href="/books/<%= books[count]._id %>" class="btn btn-primary" role="button">
                              <i class="fas fa-pen-alt"></i> Update </a>
                  </td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the DELETE BUTTON HERE -->
                    <!-- Added the Delete button for all rows -->
                     <a href="/books/delete/<%= books[count]._id %>" class="btn-danger btn btn-primary" role="button">
                                <i class="fas fa-delete-alt"></i> Delete </a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


